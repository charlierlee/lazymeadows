@{
    TKS.Models.User user = new TKS.Models.User();
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/admin/css")
    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,400italic,700' rel='stylesheet' type='text/css'>
    @RenderSection("cphHeadCSS", false)
    <!--[if lte IE 7]>
    <link href="~/Areas/Admin/css/core/iehacks.css" rel="stylesheet" />
    <![endif]-->

    <script src="/js/libs/modernizr-2.6.2.min.js"></script>
</head>
<body>
    <ul class="ym-skiplinks">
        <li><a class="ym-skip" href="#nav">Skip to navigation (Press Enter)</a></li>
        <li><a class="ym-skip" href="#main">Skip to main content (Press Enter)</a></li>
    </ul>

    <header>
        <div class="ym-wrapper">
            <div class="ym-wbox">
                <span><strong>Welcome</strong> @user.UserName</span>
                <span><a href="/admin/users/logout" class="btn red rounded dropshadow">Logout</a></span>
            </div>
        </div>
    </header>
    <div id="main">
        <div class="ym-wrapper">
            <div class="ym-wbox">
                <div class="ym-column">
                    <div class="ym-col1 content">
                        <div class="ym-cbox">
                            <div id="MsgBubble" style="display:none">Changes Saved</div>
                            @RenderBody()
                        </div>
                    </div>
                    <div class="ym-col3 sidebar">
                        <div class="ym-cbox">
                            <div class="container rounded-top bordered">
                                <div class="nav">
                                    <h3><span class="pencil">Content</span></h3>
                                    <div>
                                        <ul>
                                            <li id="content-pages">@Html.ActionLink("Pages", "Index", "Pages")</li>
                                            <li id="content-fav">@Html.ActionLink("Hand Picked Properties", "Index", "Favorites")</li>
                                            <li id="content-sold">@Html.ActionLink("Sold Properties", "Index", "Sold")</li>
                                            <li id="content-payments">@Html.ActionLink("Mortgage Configuration", "Index", "Payments")</li>
                                            <li id="content-social">@Html.ActionLink("Social Pages", "Index", "SocialPages")</li>
                                        </ul>
                                    </div>
                                    <h3><span class="contact">Contacts</span></h3>
                                    <div>
                                        <ul>
                                            <li id="view-contacts">@Html.ActionLink("View Contacts", "", "Contact")</li>
                                            <li>@Html.ActionLink("Download Contacts", "export", "Contact")</li>
                                        </ul>
                                    </div>
                                    @*<h3><span class="chat">Blog</span></h3>
                                    <div>
                                        <ul>
                                            <li id="blog-posts">@Html.ActionLink("Posts", "Index", "blog")</li>
                                            <li id="blog-category">@Html.ActionLink("Categories", "Index", "blogCategory")</li>
                                            <li id="blog-tag">@Html.ActionLink("Tags", "Index", "blogTag")</li>
                                        </ul>
                                    </div>*@
                                    <h3><span class="account">Accounts</span></h3>
                                    <div>
                                        <ul>
                                            <li id="user-user">@Html.ActionLink("Account List", "Index", "Users")</li>
                                            <li id="user-roles">@Html.ActionLink("Role Management", "Roles", "Users")</li>
                                            <li id="user-active">@Html.ActionLink("Active Accounts", "ByActive", "Users")</li>
                                            <li id="user-online">@Html.ActionLink("Online Accounts", "Online", "Users")</li>
                                            <li id="user-locked">@Html.ActionLink("Locked Accounts", "Locked", "Users")</li>
                                            <li id="user-byrole">@Html.ActionLink("Accounts by Role", "ByRole", "Users")</li>
                                            <li id="user-accounts">@Html.ActionLink("Account Levels", "AccountLevels", "Users")</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer></footer>
    @Scripts.Render("~/js/admin")
    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $(".sidebar .nav").accordion({
                collapsible: true,
                active: @ViewBag.LeftNavPanel,
                header: 'h3',
                heightStyle: "content"
            });
            @if (ViewBag.NavActive != null) {
            @:$("#@ViewBag.NavActive").addClass("active");
            }
            $(".sidebar .nav a").click(function () {
                window.location = $(this).attr('href');
            });
        });
    </script>

    @RenderSection("cphFoot", false)
</body>
</html>
