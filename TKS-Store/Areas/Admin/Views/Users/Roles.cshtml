@model IEnumerable<TKS.Areas.Admin.Models.Role>

@{
    ViewBag.Title = "Role Management";
    ViewBag.LeftNavPanel = TKS.Areas.Admin.Models.Global.mnuPosAccounts;
    ViewBag.NavActive = "user-roles";
}

<div class="container rounded bordered">
    <h2>Role Management</h2>
    <div class="holder">

        <div id="ConfirmationMessage" class="alert">@ViewBag.ErrorMessage</div>
        <table class="tabular">
            <thead>
                <tr>
                    <th scope="col">Role Name</th>
                    <th scope="col" style="text-align:right">User Count</th>
                    <th scope="col" style="text-align:center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.RoleName</td>
                        <td style="text-align:right">@item.UserCount</td>
                        <td style="text-align:center;width:100px">
                            @using (Html.BeginForm("RoleDelete", "Users")) {
                                <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this role?')" />
                                <input type="hidden" name="rolename" value="@item.RoleName" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="ym-form ym-columnar" style="margin-top:1em">
            @using (Html.BeginForm("RoleAdd", "Users")) {
                <div class="ym-fbox-text">
                    <label for="role">New Role:</label>
                    <input type="text" name="role" />
                </div>
                <div class="ym-fbox-button">
                    <input type="submit" class="ym-primary" value="Add Role" />
                </div>
            }
        </div>
    </div>
</div>
