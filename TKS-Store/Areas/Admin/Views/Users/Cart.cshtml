@model IEnumerable<TKS.Areas.Admin.Models.store.OrderItem>

@if (Model.Count() == 0) {
    <p>This member's cart is currently empty.</p>
} else {
    <p>This member's cart currently contains:</p>
    foreach (var item in Model) {
        <div class-'cartitem'>
            <h3>@item.ProductName</h3>
            <div class='ym-grid'>
                <div class='ym-g25 ym-gl'>@Html.Raw(item.TinyImage)</div>
                <div class='ym-g50 ym-gl'>
                    <div>Item # <b>@item.SKU</b> (@item.UnitPrice.ToString("c") ea.)</div>
                    <div style='font-weight:bold'>@item.InventoryStatement</div>
                </div>
                <div class='ym-g25 ym-gr' style='text-align:right'>
                    <div style='font-weight:bold'>@item.ItemSubtotal.ToString("c")</div>
                    <div class='qty'>Qty: @item.Quantity</div>
                    @*<div class='qty'>Qty: <input type='text' id='qty-7146' value='@item.Quantity' style='width:50px;text-align:center' /></div>
                    <div><button class='updQty' data-id='7146' style='width:50px;font-size:.75em;margin:4px 0'>Update</button></div>
                    <div><button class='remove' data-id='7146' style='width:50px;font-size:.75em'>Remove</button></div>*@
                </div>
            </div>
        </div>


        <hr />
    }
    <div class='ym-grid'>
        <div class='ym-g75 ym-gl'>
            Subtotal<b>
                @if (Model.Count() == 1) {
                <span>(1 Item)</span>
                } else {
                <span>(@Model.Count() Items)</span>
                }
            </b>
        </div>
        <div class='ym-g25 ym-gr' style='text-align: right; font-weight: bold'>@ViewBag.subTotal</div>
    </div>
    <hr />
}
