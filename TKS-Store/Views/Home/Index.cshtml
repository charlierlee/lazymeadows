    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Html.Raw(ViewBag.Meta)
    @Styles.Render("~/css/std")
    <!--[if lte IE 7]>
        @Styles.Render("~/css/ie")
    <![endif]-->
    @Scripts.Render("~/js/modernizr")
</head>
<body class="home">
    <!-- Google Tag Manager -->
